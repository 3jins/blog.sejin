{
  "extends": "airbnb",
  "rules": {
    "linebreak-style": 0,
    "no-console": 0,
    "no-param-reassign": 0,
    "react/jsx-filename-extension": 0,
    "no-shadow": [1, { "allow": ["err"] }],
    "no-plusplus": [1, { "allowForLoopAfterthoughts": true }]
  },
  "env": {
    "node": true,
    "browser": true,
    "mocha": true
  }
}
